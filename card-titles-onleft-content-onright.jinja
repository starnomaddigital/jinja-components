{% import '_random-id.jinja' as random_id %}
{% set sid = random_id.random_id(10) %}

<style>
.cell-{{ sid }} {
    padding: 12px;
}

.highlight-{{ sid }} {
    background-color: #eee;
}

.vertical-card-{{ sid }} {
    box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    margin-left: 6px;
    margin-right: 6px;
    display: block;
    position: relative;
    background-color: #aaa;
    height: 80px;
}

.sidebar-title-{{ sid }} {
    margin: 0;
    margin-top: 5px;
    text-align: right;
    top: 50%;
}

.content-segment-{{ sid }} {
    margin: 5px;
    background-color: #ccd;
    border-radius: 10px;
}
</style>

<div class="content-container">
    <div class="pure-g">
        {% for section in sections %}
        <div class="highlight-{{ sid }} pure-u-1 pure-u-md-1-3">
            <div class="vertical-card-{{ sid }}">
                <h2 class="cell-{{ sid }} sidebar-title-{{ sid }}">{{ section.title }}</h2>
            </div>
        </div>
        <div class="pure-u-1 pure-u-md-2-3">
            <div class="cell-{{ sid }} content-segment-{{ sid }}">
                {% for paragraph in section.paragraphs %}
                <p>{{ paragraph }}</p>
                {% endfor %}
            </div>
        </div>
        {% endfor %}
    </div>
</div>
