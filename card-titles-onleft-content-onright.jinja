{% import '_random-id.jinja' as random_id %}
{% set sid = random_id.random_id(10) %}

<style>
#content-container-{{ sid }} {
    font-family: sans-serif;
}

.cell-{{ sid }} {
    padding: 12px;
}

.highlight-{{ sid }} {
    background-color: #eee;
    height: 100%;
}

.vertical-card-{{ sid }} {
    box-shadow: 0 5px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    margin-left: 6px;
    margin-right: 6px;
    display: block;
    position: relative;
    background-color: #aaa;
}

.sidebar-title-{{ sid }} {
    text-align: right;
    top: 50%;
}

.content-segment-{{ sid }} {
    margin-left: 5px;
    padding-bottom: 1px;
    padding-left: 5px;
    padding-right: 5px;
    background-color: #ccc;
    border-radius: 10px;

}
</style>

<div class="content-container">
    <div class="pure-g">
        {% for section in sections %}
        <div class="row">
            <div class="highlight-{{ sid }} pure-u-1 pure-u-md-1-3">
                <div class="vertical-card-{{ sid }}">
                    <h2 class="cell-{{ sid }} sidebar-title-{{ sid }}">{{ section.title }}</h2>
                    {% for paragraph in section.paragraph %}
                    <p>paragraph.text</p>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
